<% include partials/header %>

<% include partials/nav %>

<div class = "container">
    
          <div class = "row text-center" style = "display:flex; flex-wrap: wrap;">
              
          <% posts.forEach(function(post){ %>
              
                    <div class = "col-md-3 col-sm-6" >
                        <div class = "thumbnail">
                            <h1><%= post.title %></h1>
                            <img src = "<%= post.image %>" width = "150" height = "230">
                            <h6><%= post.price %> $</h6>
                            <p> <%= post.desc %></p>
                            <button class = "btn btn-primary"><a href = "/shop/<%= post._id%>">Show More</a></button>
                        </div>
                    </div>
                
                
            <% }) %>
    
    </div>
    


<% include partials/footer %>