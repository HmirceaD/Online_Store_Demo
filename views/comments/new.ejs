    <h1> Add a comment to '<%= post.title%>' </h1>
    
            <form action = "/shop/<%= post._id%>/comments" method = "POST" >
                
                <div class = "form group">
                    <input type = "text" name = "comment[text]" placeholder = "Text" class = "form-control input-lg">
                </div>
                <div class = "form group">
                    <input type = "text" name = "comment[author]" placeholder = "Comment Author" class = "form-control">
                </div>
                <div class = "form group">
                    <input type = "submit" class = "btn btn-primary">
                </div>
                
            </form>
</div>

