<div class = "container">
    
    <h1> Update comment to '<%= post.title%>' </h1>
    
            <form action = "/shop/<%= post._id%>/comments/<%= comment._id%>?_method=PUT" method = "POST" >
                
                <div class = "form group">
                    <input type = "text" name = "com[text]" value = "<%= comment.text %>" class = "form-control input-lg">
                </div>
            
                <div class = "form group">
                    <input type = "text" name = "com[author]" value = "<%= comment.author %>" class = "form-control">
                </div>
                <div class = "form group">
                    <input type = "submit" class = "btn btn-primary">
                </div>
                
            </form>
</div>

