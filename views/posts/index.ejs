<% include ../partials/header %>

<% include ../partials/nav %>

<div class = "container-fluid">
    
    <div class = "row">
        <div id = "left_menu" class = "col-md-2">
            
            <% if(crr_user){ %>
                
                <h2> <a href = "/user/<%= crr_user._id %>">Logged in as: <%=crr_user.username%></a> </h2>
            
            <% } else {%>
                
                <p class = "lead">Stuff</p>
                
            <% } %>        
            
            
            <div class = "list-group">
                <a href="/shop/new" class="list-group-item list-group-item-action">Add a Post!</a>
                <a href = "/logout" class="list-group-item list-group-item-action">Sign Out</a>
                <li class = "list-group-item">Info 3</li>
                <li class = "list-group-item">Info 4</li>
            </div>  
            
        </div>
        
        <div id = "main_container" class = "col-md-10">
            <div class = "row text-center" style = "display:flex; flex-wrap: wrap;">
              
                <% posts.forEach(function(post){ %>
                  
                        <div class = "col-md-3 col-sm-6" >
                            <div class = "thumbnail">
                                <h1><%= post.title %></h1>
                                <img src = "<%= post.image %>" width = "150" height = "230">
                                <h6><%= post.price %> $</h6>
                                <p> <%= post.desc %></p>
                                <button class = "btn btn-primary"><a href = "/shop/<%= post._id%>">Show More</a></button>
                            </div>
                        </div>
                    
                    
                <% }) %>
    
            </div>
        </div>
    </div>

</div>
    
    
<% include ../partials/footer %>