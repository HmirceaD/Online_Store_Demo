<% include ../partials/nav %>

<div class = "container">
    
    <h1> Update: '<%= post.title %>' </h1>
    
            <form action = "/shop/<%= post._id %>/?_method=PUT" method = "POST" >
                
                <div class = "form group">
                    <input type = "text" name = "post[title]" value = "<%= post.title%>" class = "form-control input-lg">
                </div>
                <div class = "form group">
                    <input type = "number" name = "post[price]" value = "<%= post.price%>" class = "form-control">
                </div>
                <div class = "form group"> 
                    <input type = "text" name = "post[image]" value = "<%= post.image %>" class = "form-control">
                </div>
                <div class = "form group">
                    <textarea name = "post[desc]" value = "<%= post.desc %>" class = "form-control"></textarea>
                </div>
                <div class = "form group">
                    <input type = "submit" class = "btn btn-primary">
                </div>
                
            </form>
        
</div>

